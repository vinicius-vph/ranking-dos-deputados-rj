<div class="container" style="height:100%;">
    <h5 style="margin-top:2rem">Relatório de gastos</h5>

   <div class="d-flex align-items-end mt-3" style="font-size:.8rem">
        <table class="table table-striped table-hover" style="overflow-y:scroll;">
              <thead>
                <tr class="table-success">
                    <th scope="col">Nome do Parlamentar</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Total Gasto</th>
                </tr>
            </thead>
            <tbody>
                <% if @parliamentary_total.any? %>
                    <% @parliamentary_total.sort {|a, b| b[1] <=> a[1] }.each do |pt| %>
                    <tr>
                        <td><%= link_to pt[0], "/csv/detalhes/#{pt[0].split.join("%20") }", target: "_blank" %></td>
                        <td><%= "RJ" %></td>
                        <td><%= number_to_currency(pt[1]) %></td>
                    </tr>

                    <% end %>
                <% else %>
                    <tr>
                        <td colspan="6" class="text-danger text-center">Nenhum dado disponível</td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>